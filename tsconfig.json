{
    "compilerOptions": {
        // Compilation configuration
        "target": "ES2018",
        "module": "commonjs",
        "baseUrl": "src",
        "outDir": "./build",
        // Enhancement
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        // Strictness
        "strict": true,
        "noImplicitReturns": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "fixtures",
        "**/build/**",
    ]
}
